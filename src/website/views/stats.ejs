<div class="ui cards centered">
    <div class="card darkBackground">
        <div class="content">
            <div class="header lightColor">Resources</div>
            <div class="description lightColor">
            	Uptime: <%= stats.uptime %><br>
            	Memory: <%= stats.mem %> MB<br>
                Used Commands: <%= stats.commands %>
            </div>
        </div>
    </div>
    <div class="card darkBackground">
        <div class="content">
            <div class="header lightColor">Discord</div>
            <div class="description lightColor">
            	Members: <%= stats.discord.members %><br>
                Online: <%= stats.discord.online %><br>
                Offline: <%= stats.discord.offline %><br>
                VC: <%= stats.discord.voice %><br>
            </div>
        </div>
    </div>
</div>
